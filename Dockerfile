FROM node:20-alpine AS build
 
WORKDIR /app
 
COPY package*.json ./
 
RUN npm ci
 
COPY . .
 
RUN npm run build
 
# Stage 2: Serve with Nginx
 
FROM nginx:alpine
 
# Copy build output
 
COPY --from=build /app/build /usr/share/nginx/html
 
# Replace default Nginx config
 
COPY nginx.conf /etc/nginx/conf.d/default.conf
 
EXPOSE 80
 
CMD ["nginx", "-g", "daemon off;"]